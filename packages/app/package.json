{
  "name": "@kopai/app",
  "version": "0.6.1",
  "description": "Local OpenTelemetry backend for testing instrumentation - no Docker, no config, just npx",
  "keywords": [
    "opentelemetry",
    "otlp",
    "tracing",
    "metrics",
    "logs",
    "observability",
    "collector",
    "local",
    "testing",
    "development",
    "instrumentation"
  ],
  "license": "Apache-2.0",
  "author": "Vladimir Adamic",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kopai-app/kopai-mono.git",
    "directory": "packages/app"
  },
  "homepage": "https://github.com/kopai-app/kopai-mono/tree/main/packages/app#readme",
  "bugs": {
    "url": "https://github.com/kopai-app/kopai-mono/issues"
  },
  "engines": {
    "node": ">=20"
  },
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "bin": {
    "kopai-server": "./dist/cli.mjs"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.mts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsdown && vite build",
    "build:client": "vite build",
    "dev": "node --env-file-if-exists=.env ./dist/cli.mjs start",
    "lint": "eslint src",
    "type-check": "tsc --noEmit",
    "start": "node ./dist/cli.mjs start"
  },
  "dependencies": {
    "@fastify/vite": "^8.1.0",
    "@fastify/swagger": "^9.7.0",
    "@fastify/swagger-ui": "^5.2.5",
    "@kopai/api": "workspace:*",
    "@kopai/collector": "workspace:*",
    "@kopai/core": "workspace:*",
    "@kopai/sqlite-datasource": "workspace:*",
    "@kopai/ui": "workspace:*",
    "close-with-grace": "^2.4.0",
    "fastify": "^5.7.4",
    "fastify-type-provider-zod": "^6.1.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@kopai/tsconfig": "workspace:*",
    "@types/react": "^19.2.10",
    "@types/react-dom": "^19.1.0",
    "@vitejs/plugin-react": "^4.5.2",
    "autoprefixer": "^10.4.20",
    "postcss": "^8.5.3",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "tailwindcss": "^3.4.17",
    "tsdown": "^0.20.3",
    "typescript": "^5.9.3",
    "vite": "^6.3.5"
  }
}
