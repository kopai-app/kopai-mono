{
  "name": "@kopai/app",
  "version": "0.0.0",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "bin": {
    "kopai-server": "./dist/cli.mjs"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.mts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsdown",
    "dev": "tsdown --watch",
    "lint": "eslint src",
    "type-check": "tsc --noEmit",
    "start": "node ./dist/cli.mjs start",
    "start:dev": "nodemon --watch ./dist --watch '../*/dist' --env-file=.env ./dist/cli.mjs start"
  },
  "dependencies": {
    "@fastify/swagger": "^9.6.1",
    "@fastify/swagger-ui": "^5.2.4",
    "@kopai/api": "workspace:*",
    "@kopai/collector": "workspace:*",
    "@kopai/core": "workspace:*",
    "@kopai/sqlite-datasource": "workspace:*",
    "close-with-grace": "^2.4.0",
    "fastify": "^5.7.1",
    "fastify-type-provider-zod": "^6.1.0",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@kopai/tsconfig": "workspace:*",
    "nodemon": "^3.1.11",
    "tsdown": "^0.19.0",
    "typescript": "^5.9.3"
  }
}
